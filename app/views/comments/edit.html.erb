<%= form_for [@image, @comment] do |f| %>
  <% if @comment.errors.any? %>
    <div class="errors">
      <% @comment.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  <%= f.submit %>
<% end %>