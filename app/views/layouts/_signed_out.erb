<a class="login">Log In</a>
<a class="reg">Register</a>

<section class="clearfix">
  <article class="one_third reg_form">

    <%= form_for User.new, url: register_path, html: { class: "register-form" } do |f| %>
      <% f.object.errors.full_messages.each do |error| %>
        <div class="errors">
          <%= error %>
        </div>
      <% end %>
      <div>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div>
        <%= f.submit "Register" %>
      </div>
    <% end %>
  </article>
</section>
<section class="clearfix">
  <article class="one_third login_form">
    <%= form_for User.new, url: signin_path, html: { class: "signin-form" } do |f| %>
      <% f.object.errors.full_messages.each do |error| %>
        <div class="errors">
          <%= error %>
        </div>
      <% end %>
      <div>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true %>
      </div>
      <div>
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <div>
        <%= f.submit "Login" %>
      </div>
    <% end %>
  </article>
</section>